# Conditional Statements

#IF statement

x <- 4 

if(x > 0) {print ("x is a positive number")}

#ELSE statement

if (condition) {
  
  expr1
  
} else {
  
  expr2
  
}

#ELSE statement Example...

x <- 7 

if (x > 0) {print ("x is a positive number")} else{print ("x is either a negative number or zero")}

###

x <- (-7) 

if (x > 0) {print ("x is a positive number")} else{print ("x is either a negative number or zero")}


#ELSE IF Statement
if (condition1) {
  
  expr1
  
} else if (condition2) {
  
  expr2
  
} else {
  
  expr3
  
}


#ELSE IF Statement EXAMPLE

x <- -1

if (x < 0) {print("x is a negative number")
  

  
} else if (x == 0) { print("x is zero")
  
  
  
} else { print("x is a positive number")
  

  
}
